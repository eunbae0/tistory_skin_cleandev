            <![CDATA[ 폰트를 변경할 수 있습니다. ]]>
        </description>
        <type>SELECT</type>
        <option>
            <![CDATA[
            [
                {
                    "name":"pretendard",
                    "label":"Pretendard",
                    "value":"pretendard"
                },
                {
                    "name":"nanum_gothic",
                    "label":"Nanum Gothic",
                    "value":"nanum_gothic"
                }
            ]
            ]]>
        </option>
